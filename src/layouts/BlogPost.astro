---
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Layout from "./Layout.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, description, publishDate, updatedDate, heroImage, readingTime } = Astro.props;
---

<Layout>
  <div class="container max-w-3xl mx-auto">
  <main>
    <article>
      <!-- <div class="hero-image">
        {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
      </div> -->
      <div class="m-[clamp(40px,3.64vw+25.45px,72px)_0_40px]">
        <!-- <h3 class="text-2xl mb-8 font-light text-zinc-300">{description}</h3> -->
        
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold">{title}</h1>
        <div class=" text-zinc-400 mt-4">
          <FormattedDate date={publishDate} />
          {readingTime && (
            <>
              <span class="text-zinc-400 mx-2"> &mdash;</span>
              <span class="post-read-time text-zinc-400 mb-4">{readingTime} mins read</span>
            </>
          )}
        </div>

        {heroImage && (
          <div class="mt-10">
            <img src={heroImage} alt="" />
          </div>
        )}
      </div>

      

      <div class="prose prose-invert lg:prose-lg xl:prose-xl">
        <slot />
      </div>
    </article>
  </main>
</div>
</Layout>
